# EditorConfig helps maintain consistent coding styles between different editors and IDEs
root = true

[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.js,*.ts,*.tsx]
indent_size = 2
tab_width = 2

[*.json]
indent_size = 2
tab_width = 2
